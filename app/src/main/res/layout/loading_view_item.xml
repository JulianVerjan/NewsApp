<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back_bottom_stroke"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

    <View
            android:id="@+id/shimmer_id_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/shimmer_image_rectangle"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_toRightOf="@+id/shimmer_rating_image_three"
            android:layout_toEndOf="@+id/shimmer_rating_image_three"/>

    <View
            android:id="@+id/shimmer_rating_image_three"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/circle_shadow"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dimen_16dp"/>

    <View
            android:id="@+id/shimmer_name_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_below="@+id/shimmer_id_three"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:background="@drawable/shimmer_image_rectangle"
            android:layout_toRightOf="@+id/shimmer_rating_image_three"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_toEndOf="@+id/shimmer_rating_image_three"/>
</RelativeLayout>